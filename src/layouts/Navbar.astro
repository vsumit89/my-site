---
import signLogo from "../images/signature.png";

export interface Props {
  links: {
    name: string;
    url: string;
  }[];
}

const { links } = Astro.props;
---

<div class="navbar-container">
  <div class="img-container">
    <!-- <p>
      Sumit 
    </p> -->
    <img src={signLogo} />
  </div>

  <ul>
    {
      links.map(({ name, url }) => (
        <li>
          <a href={url}>{name}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .navbar-container {
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #eaeaea;
  }

  .navbar-container::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, #e39600, #ea4c89, #8f48eb, #1da1f2);
  }

  .img-container {
    padding: 16px 0px;
  }

  .img-container img {
    width: 100px;
    height: 32px;
  }

  ul {
    display: flex;
    gap: 8px;
    align-items: center;
    list-style-type: none;
    margin-right: 1rem;
  }

  ul li {
    padding: 0px 16px;
  }
  ul a {
    text-decoration: none;
    color: #000;
    font-weight: 500;
    font-size: 1.2rem;
  }
</style>
